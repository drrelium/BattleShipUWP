<Page
    x:Class="BattleShipUWP.MainPage" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:BattleShipUWP"
    xmlns:Custom="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <GridView
        x:Name="ImageGalleryDataTemplate"
        ItemsSource="{x:Bind mainBoard.Status, Mode=OneWay}"
        IsSwipeEnabled="True"
        SelectionMode="None">

        <GridView.ItemTemplate>
            <DataTemplate x:DataType="local:UserData">
                <Button Name="buttons"
                    Click="Button_Click" 
                    Background="{x:Bind Color}" 
                    Height="50" 
                    Width="50">
                </Button>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>

</Page>